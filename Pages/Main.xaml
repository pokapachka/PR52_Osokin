<Page x:Class="ПР52_Осокин.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ПР52_Осокин.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="Gainsboro">
        <Grid Margin="20" Background="White">
            <Grid Height="65" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Выберите группу:" VerticalAlignment="Top" Margin="5,5,10.4,0"/>
                <ComboBox x:Name="CBGroups" SelectionChanged="SelectGroup" VerticalAlignment="Top" Margin="5,31,10.4,0" Height="25"/>
                <Label Content="Фамилия и имя студента:" VerticalAlignment="Top" Margin="9.6,5,10,0" Grid.Column="1"/>
                <TextBox x:Name="TBFIO" VerticalAlignment="Top" Margin="9.6,31,10,0" Grid.Column="1" Height="25" KeyUp="SelectStudents"/>
            </Grid>
            <ScrollViewer Margin="0,65,0,39.6">
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
            <Button Click="ReportGeneration" Content="Отчет" Height="25" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"/>
        </Grid>
    </Grid>
</Page>
